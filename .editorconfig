# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120

# XML files (build.xml, resource files)
[*.xml]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120

# XSD schema files
[*.xsd]
charset = utf-8
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

# Text documentation
[*.txt]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Markdown files
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Git configuration files
[.gitignore]
charset = utf-8
insert_final_newline = true
