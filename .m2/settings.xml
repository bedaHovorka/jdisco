<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <!-- Maven Repository Configuration for jDisco -->
    <!--
         This settings.xml file provides:
         1. Primary mirror using Aliyun CDN (fast, globally accessible)
         2. Fallback to Maven Central as secondary source
         3. Proper configuration for GitHub Packages authentication

         Usage:
         - Docker: Copy to /root/.m2/settings.xml
         - GitHub Actions: Deploy to ~/.m2/settings.xml
         - Local development: Copy to ~/.m2/settings.xml
    -->

    <mirrors>
        <!-- Primary mirror: Aliyun Central Repository CDN -->
        <!-- Provides fast, reliable access to Maven Central artifacts -->
        <!-- Fallback: If Aliyun is unavailable, Maven will try configured repositories -->
        <mirror>
            <id>aliyun</id>
            <name>Aliyun Central Repository</name>
            <url>https://maven.aliyun.com/repository/central</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <servers>
        <!-- GitHub Packages authentication -->
        <!-- Used for publishing snapshots and releases -->
        <server>
            <id>github</id>
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>default</id>
            <repositories>
                <!-- Fallback repository for dependencies -->
                <!-- This allows Maven to access Maven Central if mirror is unavailable -->
                <repository>
                    <id>central</id>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <!-- Fallback repository for Maven plugins -->
                <!-- Critical for maven-source-plugin, maven-javadoc-plugin, etc. -->
                <pluginRepository>
                    <id>central</id>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>
</settings>